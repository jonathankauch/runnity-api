<%= form_for(config, remote: true) do |f| %>
  <% if config.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(config.errors.count, "error") %> prohibited this config from being saved:</h2>

      <ul>
      <% config.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <div class="col-md-12">
      <div class="checkbox">
        <%= f.check_box :is_invitable %> <label>Autoriser les invitations</label>
      </div>
    </div>
    <div class="col-md-12">
      <div class="checkbox">
        <%= f.check_box :is_commentable %>
        <label>Autoriser les commentaires</label>
      </div>
    </div>
    <%= f.hidden_field :group_id, value: group.id %>
    <hr />
  <div class="form-submit">
    <%= f.submit 'Enregistrer', {:class => "btn btn-success" } %>
  </div>
<% end %>

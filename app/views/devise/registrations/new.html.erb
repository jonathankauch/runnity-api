<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "metronics/pages/login-5.css" %>
<% end %>

<!-- BEGIN : LOGIN PAGE 5-1 -->
<div class="user-login-5">
    <div class="row bs-reset">
        <div class="col-md-6 bs-reset">
            <div class="login-bg" style="background-image:url('/assets/metronics/login-bg2.jpeg'); background-position-x: -100px">
            </div>
        </div>
        <div class="col-md-6 login-container bs-reset">
            <div class="login-content" style="margin-top: 50px;">
                <h1 class="text-center"><%= image_tag("/assets/logoRunit.png", class: "logo-login", style: "width: 300px;") %></h1>
                <!-- FORM BEGIN -->
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "login-form"}) do |f| %>
                    <div class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        <span>Enter any username and password. </span>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                          <%= f.label :email %>
                          <%= f.email_field :email, autofocus: true, class: "form-control form-control-solid placeholder-no-fix form-group", autocomplete: "off", placeholder: "Email", required: true %>
                        </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-12">
                        <%= f.label :password, "Mot de passe" %>
                        <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> caractères minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-solid placeholder-no-fix form-group", placeholder: "Mot de passe", required: true %>
                      </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                          <%= f.label :password_confirmation, "Confirmation de mot de passe" %>
                          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-solid placeholder-no-fix form-group", placeholder: "Confirmation", required: true%>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                          <%= f.label :firstname, "Prénom" %>
                          <%= f.text_field :firstname, autocomplete: "off", class: "form-control form-control-solid placeholder-no-fix form-group", placeholder: "Prénom", required: true%>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                          <%= f.label :lastname, "Nom" %>
                          <%= f.text_field :lastname, autocomplete: "off", class: "form-control form-control-solid placeholder-no-fix form-group", placeholder: "Nom", required: true%>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                          <%= f.label :weight, "Poids (kg)" %>
                          <%= f.text_field :weight, class: "form-control form-control-solid placeholder-no-fix form-group", placeholder: "60", value: '', required: false %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                          <%= f.label :phone, "Téléphone" %>
                          <%= f.text_field :phone, autocomplete: "off", class: "form-control form-control-solid placeholder-no-fix form-group", placeholder: "Téléphone", required: true%>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                          <%= f.label :address, "Adresse" %>
                          <%= f.text_field :address, autocomplete: "off", class: "form-control form-control-solid placeholder-no-fix form-group", placeholder: "Adresse", required: true%>
                        </div>
                    </div>
                    <div class="row text-center">
                      <%= f.submit "Inscription", :class => "btn btn-lg green" %>
                    </div>

                <% end %>
                <!-- FORM END -->
            </div>
        </div>
    </div>
</div>
<!-- END : LOGIN PAGE 5-1 -->

<%= form_for(group, html: { multipart: true }) do |f| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label 'Nom du groupe' %>
    <%= f.text_field :name, { :class => 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.label 'Description' %>
    <%= f.text_area :description, { :class => 'form-control' } %>
  </div>
  <% if group.pictures.count > 0 %>
    <div class="img-responsive">
      <p>
        Image du groupe
      </p>
      <%= link_to group do %>
        <% image_tag group.pictures.first.url, class: "img-responsive", style: "height: 200px !important; margin-right: auto; margin-left: auto" %>
      <% end %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label 'Image' %>
    <%= f.file_field :avatar, { :class => 'form-control' } %>
  </div>
  <div class="check_box">
    <%= f.label 'Groupe privÃ© ?' %>
    <%= f.check_box :private_status, { :class => 'form-control' } %>
  </div>

  <%= f.hidden_field :user_id, :value => @current_user.id %>
  <div class="form-submit">
    <%= f.submit 'Enregistrer', {:class => "btn btn-success" } %>
  </div>
<% end %>

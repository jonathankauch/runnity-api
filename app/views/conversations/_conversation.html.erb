<li>
  <div class="panel panel-default" data-conversation-id="<%= conversation.id %>">
    <div class="panel-heading">
      <%= link_to conversation.opposed_user(user).fullname, '', class: 'toggle-window' %>
      <%= link_to "x", close_conversation_path(conversation), class: "btn btn-default btn-xs pull-right", remote: true, method: :post %>
    </div>

    <div class="panel-body" style="display: none;">
      <div class="messages-list">
          <%= render 'conversations/conversation_content', messages: conversation.messages.order(created_at: :asc), user: user %>
      </div>
      <form class="new_message">
        <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
        <input name="user_id" type="hidden" value="<%= user.id %>">
        <div class="input-group">
      <input name="body" type="text" class="form-control" placeholder="Ecrivez votre message ici">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-secondary" type="button">Envoyer</button>
      </span>
    </div>
      </form>
    </div>
  </div>
</li>
